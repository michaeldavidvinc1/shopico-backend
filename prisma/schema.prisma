generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  ADMIN
  SELLER
}

model User {
  id             String    @id @default(cuid())
  name           String
  email          String    @unique
  password       String
  phone          String?
  role           Role
  avatar         String?
  status         Boolean   @default(true)
  email_verified DateTime?
  auth_type      String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}
